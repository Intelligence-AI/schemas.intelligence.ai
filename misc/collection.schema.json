{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "anyOf": [
    {
      "required": [
        "url",
        "reference"
      ],
      "properties": {
        "description": {
          "type": "string"
        },
        "type": {
          "const": "git"
        },
        "base": {
          "type": "string",
          "format": "uri"
        },
        "exclude": true,
        "include": true,
        "reference": {
          "type": "string",
          "maxLength": 40,
          "minLength": 40
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "additionalProperties": false
    }
  ],
  "required": [
    "type",
    "include"
  ],
  "properties": {
    "exclude": {
      "$ref": "#/definitions/path-list"
    },
    "include": {
      "$ref": "#/definitions/path-list"
    }
  },
  "definitions": {
    "path-list": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  }
}
